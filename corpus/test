module foo;

export {
	global i = 42;
}

global j = 42;
option option_ = T;
const const_ = F;

type X: record { };
redef record X += {
	x: count &optional;
};

type E: enum { eA, eB };
redef enum E += { eC };

function foo()
	{
	local x = 1;
	}

